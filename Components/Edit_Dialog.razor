
@inherits Edit_DialogBase
<MudDialog>
    <DialogContent>
        <EditForm Model="@Record"  >
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Name" HelperText="Max. 8 characters"
                                  @bind-Value="Record.Name" For="@(() => Record.Name)" />
                    <MudTextField Label="Login" Class="mt-3"
                                  @bind-Value="Record.Login" For="@(() => Record.Login)" />
                    <MudTextField Label="Password" HelperText="Choose a strong password" Class="mt-3"
                                  @bind-Value="Record.Password" For="@(() => Record.Password)" InputType="InputType.Password" />
                    <MudTextField Label="Password" HelperText="Repeat the password" Class="mt-3"
                                  @bind-Value="Password2" For="@(() => Password2)" InputType="InputType.Password" />
                </MudCardContent>
               
            </MudCard>
            <MudText Typo="Typo.body2" Align="Align.Center" Class="my-4">
                Fill out the form correctly to see the success message.
            </MudText>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Save</MudButton>
    </DialogActions>
</MudDialog>