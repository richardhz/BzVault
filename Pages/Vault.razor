@page "/vault"
@inherits VaultBase
@using BzVault.Components

<MudContainer MaxWidth="MaxWidth.Medium">
    <h3>Vault</h3>
    <MudGrid>
        <MudItem xs="12" sm="6" >
                <div style="height:650px">
                @if (Data == null)
                {
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                }
                else
                {
                    <DisplayItemList Records="Data"  OnClickItem="GetDetail"></DisplayItemList>
                }
                </div>
                <div Class="bottom">
                <MudGrid >
                    <MudItem xs="6" sm="3">
                        <MudButton Variant="Variant.Filled" Disabled="@ButtonIsDisabled(Prev)" OnClick="@GotoPrevPage">Prev</MudButton>
                    </MudItem>
                    <MudItem xs="6" sm="3">
                        <MudButton Variant="Variant.Filled" Disabled="@ButtonIsDisabled(Next)" OnClick="@GotoNextPage">Next</MudButton>

                    </MudItem>
                </MudGrid>
                </div>
        </MudItem>
        <MudItem xs="12" sm="6">
            @if (Record != null)
            {
                <DisplayDetail Record="Record"></DisplayDetail>
            }
        </MudItem>
        
        
        
        
    </MudGrid>
</MudContainer>



